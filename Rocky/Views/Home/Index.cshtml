@model Rocky.Models.ViewModels.HomeVM

<div class="container">
    <div class="text-center">
        <button class="btn btn-dark filter-button" data-filter="all">All</button>
        @foreach(var obj in Model.Categories)
        {
            @*because data filter doesnt allow spaces we replace with underscore*@
            <button class="btn btn-outline-secondary filter-button" data-filter="@obj.Name.Replace(' ','_')">
                @obj.Name
            </button>
        }
    </div>
    <br />
    <div class="row">
        @foreach(var prod in Model.Products)
        {
            <partial name="_IndividualProductCard" model="prod"/>
            // partial products
        }

    </div>
  
</div>

@section Scripts

{
    
    <script>
        $(document).ready(function(){

            $(".filter-button").click(function(){
                //get the value inside the attribute data-filter //EX: All, Meat etc..
                var value = $(this).attr('data-filter');
                if(value == "all")
                {
                    //show all
                    //show paramter to show animation
                    //select element with class .filter and show it
                    $('.filter').show('1000');
                }
                else
                {
                    //hide  the unselected EX// selected meat
                    $(".filter").not('.'+value).hide('3000');
                    //show the selected only
                    $('.filter').filter('.'+value).show('3000');
                }
            });

        });
    </script>
}
